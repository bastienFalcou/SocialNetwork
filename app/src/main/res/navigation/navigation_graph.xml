<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment"
              android:name="com.temporaryname.bastienfalcou.testnavigation.MainFragment"
              android:label="fragment_main"
              tools:layout="@layout/fragment_main">
        <action android:id="@+id/toSignUpFragment"
                app:destination="@id/signUpFragment2"/>
        <action android:id="@+id/toSignInFragment"
                app:destination="@id/signInFragment3"/>
    </fragment>
    <fragment android:id="@+id/signUpFragment2"
              android:name="com.temporaryname.bastienfalcou.testnavigation.SignUpFragment"
              android:label="fragment_sign_up" tools:layout="@layout/fragment_sign_up"/>
    <fragment android:id="@+id/signInFragment3"
              android:name="com.temporaryname.bastienfalcou.testnavigation.SignInFragment"
              android:label="fragment_sign_in" tools:layout="@layout/fragment_sign_in">
        <action android:id="@+id/toHomeScreenFragment"
                app:destination="@id/homeScreenFragment"/>
    </fragment>
    <fragment android:id="@+id/homeScreenFragment"
              android:name="com.temporaryname.bastienfalcou.testnavigation.HomeScreenFragment"
              android:label="fragment_home_screen" tools:layout="@layout/fragment_home_screen"/>
</navigation>