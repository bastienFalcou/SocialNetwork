<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:app2="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/frameLayout3">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app2:srcCompat="@mipmap/ic_launcher" android:id="@+id/image_view"
            android:layout_marginTop="8dp" app2:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app2:layout_constraintBottom_toBottomOf="parent" app2:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app2:layout_constraintEnd_toStartOf="@+id/title_view"
            android:contentDescription="Movie Image"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/title_view"
            app2:layout_constraintStart_toEndOf="@+id/image_view" android:layout_marginStart="8dp"
            tools:text="@tools:sample/lorem"
            app2:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app2:layout_constraintTop_toTopOf="parent"
            app2:layout_constraintBottom_toBottomOf="parent" app2:layout_constraintHorizontal_bias="0.5"/>

</android.support.constraint.ConstraintLayout>
