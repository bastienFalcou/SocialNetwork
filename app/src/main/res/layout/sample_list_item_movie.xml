<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.temporaryname.bastienfalcou.testnavigation"
        xmlns:app2="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/frameLayout3">

    <com.temporaryname.bastienfalcou.testnavigation.list_item_movie
            android:background="#ccc"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:paddingLeft="20dp"
            android:paddingBottom="40dp"
            app:exampleDimension="24sp"
            app:exampleColor="#33b5e5"
            app:exampleString="Hello, list_item_movie"
            app:exampleDrawable="@android:drawable/ic_menu_add"
            android:id="@+id/list_item_movie" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app2:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView"
            app2:layout_constraintTop_toTopOf="@+id/list_item_movie"
            app2:layout_constraintBottom_toBottomOf="@+id/list_item_movie"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/titleView"
            app2:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="16dp"
            tools:text="@tools:sample/lorem" app2:layout_constraintTop_toBottomOf="@+id/list_item_movie"
            app2:layout_constraintBottom_toTopOf="@+id/list_item_movie"
            app2:layout_constraintEnd_toEndOf="@+id/list_item_movie" android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>
